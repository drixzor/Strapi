{
  "kind": "collectionType",
  "collectionName": "accounts",
  "info": {
    "singularName": "account",
    "pluralName": "accounts",
    "displayName": "Accounts",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "company_name": {
      "type": "string"
    },
    "owner_name": {
      "type": "string"
    },
    "owner_email": {
      "type": "email"
    },
    "country": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "phone": {
      "type": "string"  // Updated from biginteger to string
    },
    "logo": {
      "type": "media",  // Assumes this is a media field allowing images
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "invoices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice.invoice",
      "mappedBy": "account"
    },
    "clients": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::client.client",
      "mappedBy": "account"
    }
  }
}
